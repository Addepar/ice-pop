{{#animated-popper
  isOpen=isOpen
  placement=placement
  modifiers=_popperModifiers
  renderInPlace=renderInPlace
  popperClass=(concat "adde-dropdown " _popperClass)
  popperTarget=positionTarget
  onOpen="popoverOpened"
  onClose="popoverClosed"
}}
  <div class="adde-popper-content adde-dropdown-content">
    {{yield _closePopoverHandler}}
  </div>
{{/animated-popper}}

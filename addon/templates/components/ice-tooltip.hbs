{{#if isOpen}}
  {{#ember-popper
    data-test-tooltip=true
    id=_popperId
    target=_target
    placement=placement
    renderInPlace=renderInPlace
    class="ice-tooltip"
    classNameBindings="isShowing:is-visible _popperClass"
    data-test-tooltip=true
  }}
    <div class="ice-tooltip-content">
      {{yield}}
    </div>
    <div class="popper-arrow" x-arrow></div>
  {{/ember-popper}}
{{/if}}
